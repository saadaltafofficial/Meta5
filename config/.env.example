# OpenAI API Key (optional for news analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Alpha Vantage API Key (for forex data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# MetaTrader 5 Configuration
# Set to 'true' to create a demo account automatically
MT5_CREATE_DEMO=true

# Set to 'true' to enable auto-trading based on signals
MT5_AUTO_TRADING=true

# If you already have a demo account, fill these in
# Otherwise, leave them empty and a new demo account will be created
MT5_SERVER=your_mt5_server_here
MT5_LOGIN=your_mt5_login_here
MT5_PASSWORD=your_mt5_password_here

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Trading Parameters
# Risk percentage per trade (1.0 = 1%)
RISK_PERCENT=1.5

# Minimum confidence required to execute a trade (0.0-1.0)
MIN_CONFIDENCE=0.5

# Timezone for reports (e.g., Asia/Karachi for Pakistan)
TIMEZONE=Asia/Karachi

# Report interval in hours (e.g., 12 for twice daily reports)
REPORT_INTERVAL=12
